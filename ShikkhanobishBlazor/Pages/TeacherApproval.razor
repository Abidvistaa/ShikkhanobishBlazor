                            </thead>
                            <tbody>
                                @for (int i = 0; i < tqscResult.Count; i++)
                                {
                                    <tr>
                                        <td>@tqscResult[i].teacherID</td>
                                        <td>@tqscResult[i].approved</td>
                                        <td>@tqscResult[i].notApproved</td>
                                        <td>@tqscResult[i].pending</td>

