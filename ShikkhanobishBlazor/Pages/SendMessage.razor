@code{

    public string userName { get; set; }
    public string pass { get; set; }
    List<string> name = new List<string>();

    Teachers teachers = new Teachers();
    List<Teachers> teacherList = new List<Teachers>();
    public string searchedValue { get; set; }

    protected override async Task OnInitializedAsync()
    {
        userName = await oLocalStore.GetItemAsync<string>("name");
        pass = await oLocalStore.GetItemAsync<string>("passWord");
        name.Add("gg");
        name.Add("sg");
        name.Add("fg");
        name.Add("eg");
        name.Add("mg");
        await GetTeacher();
    }



    [Inject]
    public NavigationManager nvi { get; set; }

    public async Task Logout()
    {
        await oLocalStore.ClearAsync();
        string redirectURL = "/";
        nvi.NavigateTo(redirectURL);
    }

    public async Task GetTeacher()
    {
        var tList = await "https://api.shikkhanobish.com/api/ShikkhanobishTeacher/getAllTeacher".PostJsonAsync(new { }).ReceiveJson<List<Teachers>>();
        teacherList = tList;
    }
    public void Search()
    {

        for(int i = 0; i < teacherList.Count; i++)
        {
            if (teachers.phonenumber == teacherList[i].phonenumber)
            {
                searchedValue = teacherList[i].name + " "+teacherList[i].phonenumber;
            }
        }

    }


}


















